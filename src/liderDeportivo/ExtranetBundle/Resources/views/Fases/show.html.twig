{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Fases'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>Fases</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Id</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.id }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Numerogrupos</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.numeroGrupos }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Sistemajuego</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.sistemaJuego }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Puntosganado</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.puntosGanado }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Puntosempatados</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.puntosEmpatados }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Puntosperdidos</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.puntosPerdidos }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Puntosforfeit</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.puntosForfeit }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Totalclasificadosauto</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.totalClasificadosAuto }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Totalclasificadosmanual</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.totalClasificadosManual }}</span>            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('fases') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('fases_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('fases_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}