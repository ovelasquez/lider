                        <div class="col-xs-3">
                            <i class="fa fa-tasks fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">00</div>
                            <div>Atletas</div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-red">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-support fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">00</div>
                            <div>Support</div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Campeonatos - {{ entity.nombre }} 
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">

                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-campeonatos">
                                    <thead>
                                        <tr role="row">
                                            <th>#</th>
                                            <th>Nombre</th>                    
                                            <th>Inicio</th>
                                            <th>Fin</th>
                                            <th>Sede</th>
                                            <th>{{ 'views.index.actions'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for campeonato in campeonatos %}
                                            <tr>
                                                <td><a href="{{ path('campeonatos_show', { 'id': campeonato.id }) }}">{{ campeonato.id }}</a></td>
                                                <td>{{ campeonato.nombre }}</td>

                                                <td>{% if campeonato.inicio %}{{ campeonato.inicio|date('d-m-Y') }}{% endif %}</td>
                                                <td>{% if campeonato.fin %}{{ campeonato.fin|date('d-m-Y') }}{% endif %}</td>
                                                <td>{{ campeonato.sede }}</td>
                                                <td>
                                                    <a class="btn btn-mini" href="{{ path('campeonatos_show', { 'id': campeonato.id }) }}">
                                                        {{ 'views.actions.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                                                    </a>
                                                    <a class="btn btn-mini" href="{{ path('campeonatos_edit', { 'id': campeonato.id }) }}">
                                                        {{ 'views.actions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                                                    </a>            </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-green">
                <div class="panel-heading">
                    Disciplinas - {{ entity.nombre }} 
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">

                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-disciplinas">
                                    <thead>
                                        <tr role="row">
                                            <th>#</th>                    
                                            <th>Disciplinas</th>
                                            <th>{{ 'views.index.actions'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for ligaDisciplina in ligaDisciplinas %}
                                            <tr>
                                                <td><a href="{{ path('ligadisciplina_show', { 'id': ligaDisciplina.id }) }}">{{ ligaDisciplina.id }}</a></td>                        
                                                <td><a href="{{ path('ligadisciplina_show', { 'id': ligaDisciplina.id }) }}">{{ ligaDisciplina.disciplina }}</a></td>
                                                <td>
                                                    <a class="btn btn-mini" href="{{ path('ligadisciplina_show', { 'id': ligaDisciplina.id }) }}">
                                                        {{ 'views.actions.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                                                    </a>
                                                    <a class="btn btn-mini" href="{{ path('ligadisciplina_edit', { 'id': ligaDisciplina.id }) }}">
                                                        {{ 'views.actions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                                                    </a>            
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>                                    

{% endblock %}

