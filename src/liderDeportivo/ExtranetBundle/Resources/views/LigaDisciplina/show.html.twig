{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'LigaDisciplina'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

    <h1>LigaDisciplina</h1>

    <form class="form-horizontal">
        <fieldset>       
            <div class="control-group">
                <label class="control-label">Id</label>
                <div class="controls">                
                    <span class="input-xlarge uneditable-input">{{ entity.id }}</span>            
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">Disciplina</label>
                <div class="controls">                
                    <span class="input-xlarge uneditable-input">{{ entity.disciplina }}</span>            
                </div>
            </div>  
        </fieldset>
    </form>
    <div>
        <div class="float-left">
            <a class="btn" href="{{ path('ligadisciplina') }}">
                {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
            </a>
        </div>
        <div class="float-left">
            <a class="btn btn-primary" href="{{ path('ligadisciplina_edit', { 'id': entity.id }) }}">
                {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
            </a>
        </div>



        <div class="float-left">
            <form action="{{ path('ligadisciplina_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
                <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
            </form>
        </div>
    </div>
                        

   

    <div class="span10"> 
        <h2>Categorías</h2>

        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>#</th>                    
                    <th>Categorías</th>
                    <th>{{ 'views.index.actions'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</th>
                </tr>
            </thead>
            <tbody>
                {% for categoria in categorias %}
                    <tr>
                        <td><a href="{{ path('categorias_show', { 'id': categoria.id }) }}">{{ categoria.id }}</a></td>                        
                        <td><a href="{{ path('categorias_show', { 'id': categoria.id }) }}">{{ categoria.nombre }}</a></td>
                        <td>
                            <a class="btn btn-mini" href="{{ path('categorias_show', { 'id': categoria.id }) }}">
                                {{ 'views.actions.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                            </a>
                            <a class="btn btn-mini" href="{{ path('categorias_edit', { 'id': categoria.id }) }}">
                                {{ 'views.actions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                            </a>            
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}